<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_margin="15dp"
            android:background="@drawable/bong">

            <ImageView
                android:id="@+id/imgDongGridnd"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/daikinlogo" />
            <TextView
                android:id="@+id/txtndGridnd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/imgDongGridnd"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtndtime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txtndGridnd"
                android:textAlignment="center"
                android:text="21:08-22/09/2020"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>